{
    "env": {
        "es6": true,
        "node": true,
        "mocha": false
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "extends": "eslint:recommended",
    "overrides": [
      {
        "env": {
            "mocha": true
        },
        "files": [ "test/*.js"]
      }
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "off"
        ],
        "no-useless-escape": [
            "off"
        ]
    }
}
